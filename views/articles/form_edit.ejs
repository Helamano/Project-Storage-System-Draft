<div class="form-group">
    <label for="title"><strong>Nome Completo</strong></label>
    <input required disabled value="<%= article.fullname %>" type="text" name="fullname" id="fullname" class="form-control">
</div>
<div class="form-group">
    <label for="title"><strong>Título do Projeto</strong></label>
    <input required disabled value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description"><strong>Descrição</strong></label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="price"><strong>Valor</strong></label>
    <input required disabled value="<%= article.price %>" type="number" name="price" id="price" class="form-control">
</div>
<div class="form-group">
    <label for="startdate"><strong>Data de Início Prevista</strong></label>
    <input required disabled value="<%= article.startdate %>" type="date" name="startdate" id="startdate" class="form-control">
    <label for="enddate" class="mt-2"><strong>Data de Término Prevista</strong></label>
    <input required disabled value="<%= article.enddate %>" type="date" name="enddate" id="enddate" class="form-control">
</div>
<div>
    <label><strong>Viabilidade:</strong></label>
</div>
<div class="mb-2">
    <label>Baixa Viabilidade</label>
    <label class="ml-5 mr-5">
        <input class="mr-1" type="radio" name="viabilidade" value="1" <%= article.viabilidade == 1 ? 'checked' : '' %>>1
        <input class="ml-2 mr-1" type="radio" name="viabilidade" value="2" <%= article.viabilidade == 2 ? 'checked' : '' %>>2
        <input class="ml-2 mr-1" type="radio" name="viabilidade" value="3" <%= article.viabilidade == 3 ? 'checked' : '' %>>3
        <input class="ml-2 mr-1" type="radio" name="viabilidade" value="4" <%= article.viabilidade == 4 ? 'checked' : '' %>>4
        <input class="ml-2 mr-1" type="radio" name="viabilidade" value="5" <%= article.viabilidade == 5 ? 'checked' : '' %>>5
    </label>
    <label>Alta Viabilidade</label>
</div>
<div class="form-group">
    <label for="situation"><strong>Situação</strong></label>
    <select required value="<%= article.situation %>" name="situation" id="situation" class="form-control">
        <option disabled selected>Selecione</option>
		<option value="Concluído" <%= article.situation == "Concluído" ? 'selected' : '' %>>Concluído</option>
		<option value="Em desenvolvimento" <%= article.situation == "Em desenvolvimento" ? 'selected' : '' %>>Em desenvolvimento</option>
		<option value="Planejado" <%= article.situation == "Planejado" ? 'selected' : '' %>>Planejado</option>
        <option value="Cancelado" <%= article.situation == "Cancelado" ? 'selected' : '' %>>Cancelado</option>
	</select>
</div>

<a href="/" class="btn btn-secondary">Cancelar</a>
<button type="submit" class="btn btn-primary">Salvar</button>